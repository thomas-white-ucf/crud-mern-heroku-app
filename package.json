{
  "name": "crud-mern-heroku-app",
  "homepage": "https://crud-mern-heroku-app.herokuapp.com/",
  "version": "1.0.0",
  "description": "Creating a boilerplate for MERN code stacks",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn dev",
    "start:prod": "node server.js",
    "dev": "nodemon server.js",
    "install": "cd client && npm install",
    "build": "cd client && yarn build",
    "heroku-postbuild": "yarn build",
    "serve": "cd client && yarn serve -s build",
    "u": "yarn upgrade --latest",
    "u-i": "yarn upgrade-interactive --latest",
    "i-check": "yarn install --check-files"
  },
  "keywords": [
    "heroku"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "if-env": "^1.0.4",
    "mongodb": "^4.5.0",
    "mongoose": "^6.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "server": "^1.0.37"
  },
  "engines": {
    "node": "16.x",
    "yarn": "1.x"
  }
}
